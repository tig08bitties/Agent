[Unit]
Description=Super Sovereign Cursor-Agent CLI - System76 Extension
Documentation=https://github.com/tig08bitties/Agent
After=network.target system76-power.service
Wants=network.target

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/usr/bin/node /root/cursor-agent/src/cli.js system76-activate
ExecStop=/usr/bin/node /root/cursor-agent/src/cli.js system76-deactivate
StandardOutput=journal
StandardError=journal
User=root
Environment="CURSOR_AGENT_HOME=/root/cursor-agent"
Environment="NODE_PATH=/root/cursor-agent/node_modules"
WorkingDirectory=/root/cursor-agent

[Install]
WantedBy=multi-user.target
